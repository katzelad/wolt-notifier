{
  "manifest_version": 2,
  "name": "wolt-notifier",
  "version": "1.0",
  "description": "Notifies when a Wolt restaurant is online.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "https://*.wolt.com/*"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": "icon.png",
    "default_title": "Notify when online"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}